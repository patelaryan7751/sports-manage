<% if( todaysCreatedSessions.length == 0 && todaysJoinedSessions.length==0) { %>
    <h2 class="text-3xl font-medium text-black my-2">Today's Sessions </h2>
    <div class="text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path vector-effect="non-scaling-stroke" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z" />
      </svg>
      <h3 class="mt-2 text-3xl font-semibold text-gray-900">No sessions for today !</h3>
      <p class="mt-1 text-xl text-gray-500">Get started by createing or joining a new session.</p>
    </div>
    <% } else { %>
        <h2 class="text-3xl font-medium text-black my-2">Today's Sessions </h2>
    <div>
      <ul role="list" class="mt-3 grid grid-cols-1 gap-5 sm:grid-cols-2 sm:gap-6 lg:grid-cols-4">
        <%  for(var i=0; i<todaysCreatedSessions.length; i++) {  %>
            <%- include("sessionsCard.ejs",{session:todaysCreatedSessions[i],sport:todaysCreatedSessions[i].Sport}) %>
            <% } %>   
        <%  for(var i=0; i<todaysJoinedSessions.length; i++) {  %>
          <%- include("sessionsCard.ejs",{session:todaysJoinedSessions[i].Session,sport:todaysJoinedSessions[i].Session.Sport}) %>
          <% } %>   
      </ul>
    </div>
      <% } %>